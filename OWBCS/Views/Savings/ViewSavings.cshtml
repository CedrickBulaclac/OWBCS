
@{
    Layout = "/Views/Layout/LayoutMember.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewSavings</title>
    <link rel="stylesheet" href="~/Content/bootstrap3.3.7.css" />
    <link rel="stylesheet" href="~/Content/Datatable.css" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <br />
    <br />
    <br />
    <div class="row">
        <h2>Saving Logs</h2>
        <hr />
        <div class="col-lg4">

        </div>
        <div class="col-lg4">
            <div class="table table-responsive">
                <table class="table table-striped" id="savings">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div class="col-lg4">

        </div>
    </div>
   

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Content/moment.js"></script>
    <script src="~/Content/Datatable.js"></script>
    <script>
        var table1 = $('#savings').DataTable({
            "ajax": {
                "url": '/Savings/GetSavings',
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": "SavingsDate", render: function (data, type, announcement) { return announcement.FormattedDate }, "autowidth": true },
                { "data": "SavingsAmt", "autowidth": true },
            ],
        });
    </script>
</body>
</html>
